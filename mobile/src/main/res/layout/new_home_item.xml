<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="5dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/crd1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        foo:cardBackgroundColor="@android:color/transparent"
        foo:cardCornerRadius="5dp"
        foo:cardElevation="0dp">
        <!--<TextView-->
        <!--android:id="@+id/txxttx"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="500dp"-->
        <!--android:clickable="true"-->
        <!--android:visibility="visible"-->
        <!--android:background="@color/prry" />-->


        <LinearLayout
            android:id="@+id/idLin"
            android:layout_width="fill_parent"
            android:layout_height="470dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="3">


            <!--"vend_no": "VG0001",-->
            <!-- "vend_name": "G&J LAND & MARINE FOOD DISTRIBUTORS, INC.",-->
            <!--"item_id": "51629.000000",-->
            <!--"item_descr": "BLACK PEPPER CHICKEN",-->
            <!-- "uom": "CTN",-->
            <!--"qty_order": "10.000000",-->
            <TextView
                android:id="@+id/trxt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/img"
                style="@style/tst"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/nopic"
                android:textColor="@color/ind" />


            <LinearLayout
                android:id="@+id/top"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="1dp"
                android:visibility="visible"
                android:weightSum="1.6">

                <pos.sd.omakasa.Utils.TextViewPlus
                    android:id="@+id/tiitl"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.36"
                    android:gravity="bottom|left"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="SANDRES"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    foo:customFont="avenri_bold.ttc"


                    />

                <pos.sd.omakasa.Utils.TextViewPlus
                    android:id="@+id/desc"
                    style="@style/tst"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.42"
                    android:gravity="top"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="FINE CUTE SWEAT MIX TELL ME HOW ARE YOU THIS MAKING TEL ME MAKECUTE SWEAT MIX TELL"
                    android:textColor="@color/text_secondary"
                    android:textSize="28sp"
                    android:visibility="visible"
                    foo:customFont="avenr_regular.ttf"


                    />


                <pos.sd.omakasa.Utils.TextViewPlus
                    android:id="@+id/pric"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.46"
                    android:gravity="left|center"
                    android:text="17.00"
                    android:textColor="@android:color/black"
                    android:textSize="40sp"
                    android:visibility="visible"
                    foo:customFont="avenri_bold.ttc" />

                <Button
                    android:id="@+id/addiy"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="100dp"
                    android:layout_weight="0.45"
                    android:background="@drawable/r_corner_white_yes"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="@string/additm"
                    android:textColor="@color/white"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <Button
                    android:id="@+id/select"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="100dp"
                    android:layout_weight="0.45"

                    android:background="@drawable/r_corner_black"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="@string/slect"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:visibility="visible" />


            </LinearLayout>

            <TextView
                android:id="@+id/tfffrxt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btmlin"
            android:layout_width="fill_parent"
            android:layout_height="370dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="470dp"
            android:background="@color/prry"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="270dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <pos.sd.omakasa.Utils.TextViewPlus
                    style="@style/tst"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.8"
                    android:gravity="center|top"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text=" Choose \n type"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    foo:customFont="avenri_bold.ttc"


                    android:id="@+id/textViewPlus" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/itmvr"
                    android:layout_width="fill_parent"

                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3dp"
                    android:layout_weight="0.2"></android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <Button
                android:id="@+id/addy"
                android:layout_width="365dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="10dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.44"
                android:background="@drawable/r_corner_white_yes"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/additm"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
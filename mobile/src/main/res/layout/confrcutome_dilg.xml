<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/r_corner_white"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/_btncln"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/cncl" />

    <pos.sd.omakasa.Utils.TextViewPlus
        android:id="@+id/_hdr"
        android:layout_width="1000dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:text="CAN HELP YOU"
        android:textColor="@android:color/black"
        android:textSize="60sp"
        android:textStyle="bold"
        android:typeface="sans"
        foo:customFont="avenri_bold.ttc" />

    <pos.sd.omakasa.Utils.TextViewPlus
        android:id="@+id/_dtl"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:gravity="top|center_horizontal"
        android:text="Help is On the way \n Please wait our staff will assist you "
        android:textColor="@android:color/black"
        android:textSize="45sp"
        foo:customFont="avenr_regular.ttf"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:orientation="horizontal">




        <Button
            android:id="@+id/_nobtn"
            android:layout_width="420dp"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:background="@drawable/r_corner"
            android:drawableStart="@drawable/del"
            android:gravity="left|center"
            android:paddingLeft="100dp"
            android:text="CANCEL"

            android:drawablePadding="20dp"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <Button
            android:id="@+id/_yesbtn"
            android:layout_width="420dp"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:background="@drawable/r_corner_white_yes"
            android:drawableStart="@drawable/chkmr"
            android:gravity="left|center"
            android:drawablePadding="20dp"
            android:paddingLeft="100dp"
            android:text="OK"

            android:textColor="@color/white"
            android:textSize="50sp" />

    </LinearLayout>
<TextView
    android:layout_width="fill_parent"
    android:layout_height="100dp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/landing"
   >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:padding="0dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/menu_logo"/>



    <TextView
        android:id="@+id/rest"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_height="fill_parent" />

    <android.widget.TextClock
        android:id="@+id/hk_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timeZone="GMT+0800"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:format24Hour="MMM dd, yyyy k:mm:ss"
        android:format12Hour="@null" />

<TextView
    android:id="@+id/tsID"
    android:layout_width="fill_parent"
    android:layout_centerInParent="true"
    android:layout_height="890dp" />
    <TextView
        android:id="@+id/vrsn"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="V:1.0"
        android:layout_marginRight="20dp"
        android:gravity="bottom|right"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"/>
    <pos.sd.omakasa.Utils.TextViewPlus
        android:layout_width="fill_parent"
        android:background="@color/black_overlay"
        android:visibility="visible"
        android:text="Touch the screen to begin."
        android:textSize="100sp"
        android:gravity="center"
        foo:customFont="avenir_medium.ttc"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_height="350dp" />
</RelativeLayout>

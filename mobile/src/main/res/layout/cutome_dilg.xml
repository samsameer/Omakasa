<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/r_corner_white"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btncln"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:scaleType="center"
        android:src="@drawable/cncl"/>

<pos.sd.omakasa.Utils.TextViewPlus
    android:id="@+id/hdr"
    android:layout_width="1000dp"
    android:layout_height="150dp"
    android:text="CAN HELP YOU"
    foo:customFont="avenri_bold.ttc"
    android:textColor="@android:color/black"
    android:textSize="60sp"
    android:textStyle="bold"
    android:typeface="sans"
    android:gravity="center"
    />

    <pos.sd.omakasa.Utils.TextViewPlus
        android:id="@+id/dtl"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:text="Help is On the way \n Please wait our staff will assist you "
        android:textColor="@android:color/black"
        android:textSize="45sp"
        foo:customFont="avenr_regular.ttf"
        android:textStyle="normal"
        android:gravity="top|center_horizontal"
        />


    <Button
        android:id="@+id/okbtn"
        android:layout_width="300dp"
        android:text="OK"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:drawableStart="@drawable/chkmr"
        android:textSize="40sp"
        android:drawablePadding="10dp"
        android:paddingLeft="70dp"
        android:gravity="left|center"
android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/r_corner_white_yes"
        android:layout_height="70dp" />


    <Button
        android:id="@+id/_canbtn"
        android:layout_width="600dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/r_corner"
        android:drawablePadding="30dp"
        android:visibility="gone"
        android:drawableStart="@drawable/del"
        android:gravity="left|center"
        android:textStyle="bold"
        android:paddingLeft="170dp"
        android:text="CANCEL"
        android:textColor="@color/white"
        android:textSize="40sp" />



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp" />
</LinearLayout>